<% provide(:title, @user.name) %>
<div class ="row">
<aside class="col-md-4">
<section class="user_info">
<h1>
	<!-- <%= gravatar_for @user %> -->
	<avatar class="img-thumbnail">
		<%= if profile_picture_empty @user.profile_picture_url(:thumb).to_s
				gravatar_for @user
			else
				image_tag @user.profile_picture_url(:thumb).to_s  
			end %>
	</avatar>
	<%= @user.name %>
</h1>
</section>
</aside>
</div>