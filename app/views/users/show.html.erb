<% provide(:title, @user.name) %>
<div class ="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<% if profile_picture_empty @user.profile_picture_url(:thumb).to_s %>
					<%= gravatar_for @user %>
				<% else %>
				<avatar class="img-thumbnail">
						<%= image_tag @user.profile_picture_url(:thumb).to_s  %>
				<avatar class="img-thumbnail">
				<% end %>
				<%= @user.name %>
			</h1>
		</section>
		<section class="stats">
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="col-md-8">
		<%= render 'follow_form' if logged_in? %>
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
				<ol class="microposts">
				<%= render @microposts %>
				</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>